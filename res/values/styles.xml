<resources xmlns:android="http://schemas.android.com/apk/res/android">
<style name="topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46.0dip</item>
    </style>
    <style name="list_left_column">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>
    <style name="topbar_text">
	    <item name="android:textSize">23sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">#ffffffff</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:shadowColor">#40000000</item>
	    <item name="android:shadowDy">-2.0</item>
	    <item name="android:shadowRadius">4.0</item>
	    <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
     <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="TextAppearance.SlidingTabNormal" parent="@android:attr/textAppearanceMedium">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.SlidingTabActive" parent="@android:attr/textAppearanceMedium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Toggle buttons in the in-call onscreen touch UI. -->

    <style name="DialtactsDialpadButtonStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="DialtactsDigitsTextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">@dimen/dialpad_digits_text_size</item>
        <item name="android:freezesText">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:editable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="DialPadRow">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="homeTabIndicatorText">
        <item name="android:textColor">@color/tab_cond_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formWhiteBlock">

        <!-- <item name="android:background">@drawable/form_white_background</item> -->
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="DarkTheme" parent="Theme.Sherlock"></style>

    <style name="DarkTheme.Dialog" parent="Theme.Sherlock.Dialog">

        <!-- TODO : use android:attr on 11 -->
        <item name="actionBarItemBackground">@drawable/abs__item_background_holo_dark</item>
        <!--
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/panel_background</item>
        -->
    </style>

    <style name="DarkTheme.NoTitle" parent="Theme.Sherlock.NoActionBar">
        <item name="actionBarItemBackground">@drawable/abs__item_background_holo_dark</item>
    </style>

    <!-- Notification -->
    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar" />

    <style name="ButtonBarButton" parent="@android:style/Widget.Button" />

    <style name="ButtonBar.AlertDialog" parent="@android:style/ButtonBar" />
<style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>